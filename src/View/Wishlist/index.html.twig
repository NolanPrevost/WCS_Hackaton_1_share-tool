{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Wishlist</h1>
    <ul>
        {% for wishitem in wishitems %}
            <li><a href="/wishlist/show?id={{ wishitem.id }}">{{ wishitem.id }}. {{ wishitem.name }}</a></li>
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
    </ul>
    <a href="/wishlist/add">Ajouter</a>
{% endblock %}
